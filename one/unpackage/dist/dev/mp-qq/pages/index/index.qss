.qrcode {
		width: 140rpx;
		height: 140rpx;
		position: absolute;
		top: 10%;
		right: 3%;
}
.sentence {
		width: 380px;
		position: absolute;
		top: 40%;
		left: 5%;
		padding: 0px;
		overflow: hidden;
		z-index: 1;
		width: 90%;
		height: 20%;
		color: #000000;
		font-size: 20;
		text-align: center;
}
.next {
		position: absolute;
		background: #1aaf5d;
		border: none;
		color: #fff;
		top: 78%;
		left: 30%;
		height: 70rpx;
		line-height: 70rpx;
		width: 40%;
		border-radius: 35px;
		outline: none;
		cursor: pointer;
		-webkit-transition: all 0.5s;
		-o-transition: all 0.5s;
		transition: all 0.5s;
		-webkit-box-shadow: 2px 2px 2px #999;
		        box-shadow: 2px 2px 2px #999;
}
